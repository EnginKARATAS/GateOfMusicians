@using LoginYap4.WebApp
@model IEnumerable<LoginYap4.Entities.SiteUser>

@{
    ViewBag.Title = "Kullanıcılar";
}


<div class="row">

    <div class="col-md-1 col-md-offset-1">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>
</div>
<div class="row">
    <p>
        @Bootstrap.LinkButton("/SiteUser/Create", "primary", string.Empty, string.Empty, "plus", " Yeni")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAdmin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedUsername)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsAdmin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedUsername)
                </td>
                <td>
                    @Bootstrap.LinkButton("/SiteUser/Edit/" + item.Id, "warning", "btn-xs", "Düzenle", "edit", string.Empty)

                    @Bootstrap.LinkButton("/SiteUser/Details/" + item.Id, "info", "btn-xs", "Detaylar", "search", string.Empty)

                    @Bootstrap.LinkButton("/SiteUser/Delete/" + item.Id, "danger", "btn-xs", "Kaldır", "trash", string.Empty)
                </td>

            </tr>
        }

    </table>
</div>

