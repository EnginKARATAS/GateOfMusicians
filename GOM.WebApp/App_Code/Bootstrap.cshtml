@helper ModalPopup(string id = "myModal", string title = "Modal Title", bool showCloseButton = true)
{
    <!-- Central Modal Small -->
    <div class="modal" id="@id" name="@id" tabindex="-1" role="dialog" aria-labelledby="@(id + "_label")">
        aria-hidden="true">

        <div class="modal-content">

            <div class="modal-body" id="@(id + "_body")">

                @*centralModalSm_body*@

            </div>

            <div class="modal-footer">

                <button id="btnClose" type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary btn-sm">Save changes</button>

            </div>
        </div>
</div>


}

@helper ModalComment(string id = "myModal", string title = "ModalComment Title", bool showCloseButton = true)
{
    <!-- Central Modal Small -->

    <div class="modal fade" id="commentModalSm" tabindex="-1" role="dialog" aria-labelledby="@(id + "_label")"
         aria-hidden="true">

        <!-- Change class .modal-sm to change the size of the modal -->
        <div class="modal-dialog modal-lg" role="document">

            <div class="modal-content">
                <div class="modal-header" id="@(id + "_header")">
                    <h4 id="@(id + "_label")" class="modal-title w-100" id="myModalLabel">@title </h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="@(id + "_body")">
                    ...
                </div>
                <div class="modal-footer" id="@(id + "_footer")">
                    @if (showCloseButton == true)
                    {
                        <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Close</button>
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- Central Modal Small -->
}

